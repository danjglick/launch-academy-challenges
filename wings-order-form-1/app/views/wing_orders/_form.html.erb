<%= form_for(wing_order) do |f| %>
	<div class="field">
		<%= f.label :customer_name %>
		<%= f.text_field :customer_name %>
	</div>
	
	<div class="field">
		<%= f.label :city %>
		<%= f.text_field :city %>
	</div>
	
	<div class="field">
		<%= f.label :state %>
		<%= f.text_field :state %>
	</div>
	
	<div class="field">
		<%= f.label :quantity %>
		<%= f.number_field :quantity %>
	</div>

	<div class="field">
		<%= f.label :ranch_dressing %>
		<%= f.check_box :ranch_dressing %>
	</div>

	<div class="field">
		<%= collection_check_boxes(wing_order, :flavor_ids, flavor, :id, :name) %>
	</div>

	<div class="select">
		<%= f.label :flavor %>
		<%= f.select :flavor_ids, options_from_collection_for_select(flavor, :id, :name) %> 
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
	
